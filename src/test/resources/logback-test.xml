<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%red%date{ISO8601}] [%thread] %-40logger{40} %-5level- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="slick.basic" level="DEBUG"/>
    <logger name="com.zbutwialypiernik" level="DEBUG"/>
    <logger name="com.github.kagkarlsson" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>